<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <!-- style sheets references -->
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- script files references -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    @RenderSection("ScriptSection", false)
</head>
<body>
    <div class="row">
        <div class="col-2">
            <img src="~/images/logo.jpg" style="width: 200px" />
        </div>
        <div class="col-10">
            <div class="row">
                <nav class="navbar navbar-expand-lg col-12" style="        background-color: #3d52b5" role="navigation">
                    <div>
                        <ul class="nav navbar-nav" style="color: white">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Login" asp-controller="Account">Home</a>
                            </li>
                            
                            
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="OnlyPython" asp-action="CreateQuestion">Create a Question</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Template" asp-action="Index">Exercises</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Logoff" asp-route-returnUrl="OnlyPython">Logout</a>
                                </li>
                            
                        </ul>

                    </div>
                </nav>
            </div>
            <br />
            <div class="row">
                <div class="col-10">
                    @RenderBody()
                </div>
                <div class="col-2"></div>
            </div>
        </div>
    </div>

</body>
</html>